<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="title" content="{{title}}">
    <meta name="description" content="{{ description }}" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" value="summary">

    <!-- Open Graph data -->
    <meta property="og:title" content="{{title}}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{{url}}}" />
    <meta property="og:image" content="{{{url}}}og_image.jpg" />
    <meta property="og:description" content="{{ description }}" />

    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500%7CRoboto:400,500&display=swap" rel="stylesheet">

    <title>{{title}}</title>
</head>
<body>
    <header id="header">
        <div class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://openy.org/" title="Open Y" rel="Open Y">Open Y</a>
                <a class="navbar-back-to-openy ml-auto" href="https://openy.org/" title="Open Y" rel="Open Y">
                    Back to Open Y.org
                </a>
            </div>
        </div>
    </header>
    <div id="main" class="container-fluid">
        <div class="row">
            <div class="intro col-12">
                <h1>{{ header }}</h1>

                <p class="intro-text">{{ intro }}</p>
            </div>
        </div>

        {{> partials/cards cards=this.cards }}

    </div>

    <footer class="footer">
        <div class="footer-copyright py-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 footer-copy-links">
                      Â© 2020 Open Y, LLC. Rights reserved.
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>
